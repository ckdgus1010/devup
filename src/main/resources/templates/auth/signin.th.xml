<?xml version="1.0"?>
<thlogic xmlns:th="http://www.thymeleaf.org">
    <attr sel="head">
        <attr sel="link" th:href="@{/css/auth/signin.css}"/>
    </attr>
    <attr sel="body">
        <attr sel="#header" th:replace="~{common/header :: header}"/>
        <attr sel="main">
            <attr sel=".signin-box">
                <attr sel="form">
                    <attr sel="div.signup-link">
                        <attr sel="a" th:href="@{/auth/signup}"/>
                    </attr>
                </attr>
            </attr>
        </attr>
        <attr sel="#footer" th:replace="~{common/footer :: footer}"/>
        <attr sel="#main-script" th:src="@{/js/auth/signin.js}"/>
    </attr>
</thlogic>